<Window x:Class="ExpressionCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор ОПЗ" Height="400" Width="650">
    <StackPanel Margin="10">
        <Grid Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Подпись и поле ввода для математического выражения -->
            <Label Content="Введите математическое выражение:" Grid.Row="0" Grid.Column="0" Margin="0,8,8,0" 
                   FontFamily="Constantia" FontSize="14"/>
            <TextBox x:Name="InputExpression" Grid.Row="0" Grid.Column="1" Width="360" Height="30" Margin="0,5,0,0" 
                     ToolTip="Введите выражение, используйте 'x' как переменную"/>

            <!-- Подпись и поле ввода для значения переменной x -->
            <Label Content="Введите значение переменной x:" Grid.Row="1" Grid.Column="0" Margin="0,8,8,0" 
                   FontFamily="Constantia" FontSize="14"/>
            <TextBox x:Name="InputXValue" Grid.Row="1" Grid.Column="1" Width="360" Height="30" Margin="0,5,0,0" 
                     ToolTip="Значение переменной x"/>

            <!-- Кнопка для выполнения вычислений -->
            <Button Content="Вычислить" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="200" Margin="0,10,0,0" 
                    FontFamily="Constantia" FontSize="14"
                    HorizontalAlignment="Left" Click="Calculate_Click"/>

            <!-- Поле для вывода результата -->
            <Label x:Name="ResultLabel" Content="Результат:" Grid.Row="3" Grid.Column="0" Margin="0,10,8,0" 
                   FontFamily="Constantia" FontSize="14"/>
            <TextBox x:Name="OutputResult" Grid.Row="3" Grid.Column="1" Width="360" Height="30" Margin="0,10,0,0" 
                     IsReadOnly="True"/>
        </Grid>
    </StackPanel>
</Window>
