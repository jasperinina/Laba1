<Window x:Class="ExpressionCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор ОПЗ" Height="200" Width="400">
    <StackPanel Margin="10">
        <TextBox x:Name="InputExpression" Width="360" Height="30" Margin="5"/>
        <Button Content="Вычислить" Width="360" Height="30" Margin="5" Click="Calculate_Click"/>
        <Label x:Name="ResultLabel" Width="360" Height="30" Margin="5" Content="Результат"/>
    </StackPanel>
</Window>